{
	"name": "@6river/pubcap",
	"version": "0.0.1",
	"description": "Google Pub/Sub message Capture",
	"main": "dist/src/pubcap.js",
	"directories": {
		"test": "test"
	},
	"scripts": {
		"only:build": "tsc",
		"only:test": "NODE_ENV=test ./node_modules/.bin/mocha ${MOCHA_OPTS}",
		"prebuild": "npm run lint",
		"build": "npm run only:build",
		"pretest": "npm run build",
		"test": "npm run only:test",
		"lint": "./node_modules/.bin/eslint .",
		"clean": "rm -rf dist/"
	},
	"repository": {
		"url": "git+ssh://git@github.com/6riverSystems/pubcap.git"
	},
	"keywords": [
		"loopback",
		"pubsub"
	],
	"author": "Nick Chistyakov",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/6riversystems/pubcap/issues"
	},
	"homepage": "https://github.com/6riversystems/pubcap#readme",
	"devDependencies": {
		"@types/chai": "^4.1.7",
		"@types/mocha": "^5.2.7",
		"@types/node": "^12.6.2",
		"@typescript-eslint/parser": "^1.12.0",
		"chai": "^3.5.0",
		"cz-conventional-changelog": "^2.1.0",
		"eslint": "^6.0.1",
		"eslint-config-6river": "^1.0.3",
		"eslint-plugin-mocha": "^5.3.0",
		"eslint-plugin-typescript": "^0.8.1",
		"husky": "^0.14.3",
		"mocha": "^6.1.4",
		"mocha-junit-reporter": "^1.23.1",
		"ts-node": "^8.3.0",
		"typescript": "^3.5.3",
		"validate-commit-msg": "^2.14.0"
	},
	"dependencies": {
		"@google-cloud/pubsub": "^0.30.1"
	},
	"config": {
		"validate-commit-msg": {
			"types": [
				"feat",
				"fix",
				"docs",
				"style",
				"refactor",
				"perf",
				"test",
				"build",
				"ci",
				"chore",
				"revert"
			],
			"warnOnFail": false,
			"maxSubjectLength": 100,
			"subjectPattern": ".+",
			"subjectPatternErrorMsg": "subject does not match subject pattern!",
			"helpMessage": "Follow <type>(<scope>): <subject> pattern, max 100 chars.",
			"autoFix": false
		},
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	}
}
