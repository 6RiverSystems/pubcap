{
	"name": "@6river/pubcap",
	"version": "0.0.0-development",
	"description": "Google Pub/Sub message Capture",
	"main": "dist/src/pubcap.js",
	"directories": {
		"test": "test"
	},
	"scripts": {
		"only:build": "tsc",
		"only:test": "NODE_ENV=test PUBSUB_EMULATOR_HOST=localhost:8085 ./node_modules/.bin/mocha ${MOCHA_OPTS}",
		"prebuild": "npm run lint",
		"build": "npm run only:build",
		"pretest": "npm run build",
		"test": "npm run only:test",
		"lint": "./node_modules/.bin/eslint .",
		"clean": "rm -rf dist/"
	},
	"repository": {
		"url": "git+ssh://git@github.com/6riverSystems/pubcap.git"
	},
	"keywords": [
		"loopback",
		"pubsub"
	],
	"author": "Nick Chistyakov",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/6riversystems/pubcap/issues"
	},
	"homepage": "https://github.com/6riversystems/pubcap#readme",
	"devDependencies": {
		"@6river/commitlint-config-6river": "^2.1.0",
		"@commitlint/cli": "^8.1.0",
		"@types/chai": "^4.1.7",
		"@types/mocha": "^5.2.7",
		"@types/node": "^12.6.2",
		"@typescript-eslint/parser": "^1.12.0",
		"chai": "^3.5.0",
		"eslint": "^6.0.1",
		"eslint-config-6river": "^1.0.3",
		"eslint-plugin-mocha": "^5.3.0",
		"eslint-plugin-typescript": "^0.8.1",
		"husky": "^1.3.1",
		"mocha": "^6.1.4",
		"mocha-junit-reporter": "^1.23.1",
		"ts-node": "^8.3.0",
		"typescript": "^3.5.3"
	},
	"dependencies": {
		"@google-cloud/pubsub": "^0.30.1"
	},
	"husky": {
		"hooks": {
			"commit-msg": "commitlint -e ${HUSKY_GIT_PARAMS}"
		}
	},
	"commitlint": {
		"extends": [
			"@6river/commitlint-config-6river"
		]
	}
}
